{
  "version": "1.0",
  "locale": "zh-CN",
  "baseIntervalMinutes": 1,
  "petWindow": { "scale": 0.7 },
  "notifications": { "systemEnabled": true, "silent": false },
  "journal": { "dailyReportTime": "18:00", "notifyEnabled": true, "hotkey": "Alt+J" },
  "reminders": {
    "daily": {
      "enabled": true,
      "defaultIntervalMinutes": 45,
      "cooldownMinutes": 5,
      "triggers": [{ "id": "daily-interval", "type": "timeElapsed", "thresholdMinutes": 45 }],
      "messages": [
        { "id": "daily-1", "text": "已经投入一阵子了，起来活动下，顺便记一条想法？" },
        { "id": "daily-2", "text": "喝口水，舒展一下，保持好状态继续冲。" },
        { "id": "daily-3", "text": "今天的节奏不错，继续保持！" },
        { "id": "daily-4", "text": "记得看看身体状态，保持专注也要保持健康。" }
      ]
    }
  }
}
